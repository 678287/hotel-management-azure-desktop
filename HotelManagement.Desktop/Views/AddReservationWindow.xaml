<Window x:Class="HotelManagement.Desktop.Views.AddReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Reservation" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Guest Name:"/>
            <TextBox x:Name="GuestNameBox" Margin="0,5"/>

            <TextBlock Text="Start Date:" Margin="0,10,0,0"/>
            <DatePicker x:Name="StartDatePicker"/>

            <TextBlock Text="End Date:" Margin="0,10,0,0"/>
            <DatePicker x:Name="EndDatePicker"/>

            <Button Content="Confirm" Margin="0,15,0,0" Click="Confirm_Click" Width="80" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
